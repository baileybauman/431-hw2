-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => ('title' == @sort_by) ? 'hilite' : ''}= link_to 'Movie Title', :id => 'title_header', :sort => 'title'
      %th Rating
      %th{:class => ('release_date' == @sort_by) ? 'hilite' : ''}= link_to 'Release Date', :sort => 'release_date'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
